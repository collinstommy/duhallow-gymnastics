---
import SectionHeading from "./SectionHeading.astro";
import { marked } from 'marked';
import config from '../content/config.json'
import RichText from './RichText.astro';

const { membership } = config

const content = marked.parse(membership);
---

<section
  class="relative flex w-full justify-center px-10 text-dark lg:grid lg:grid-cols-2"
>
  <div class="relative hidden justify-center p-2 lg:flex lg:p-0">
    <img
      class="z-10 my-12 max-h-[500px] rounded-2xl border-8 border-white"
      src="assets/group.webp"
      alt="group photo of Patria with kids"
      loading="lazy"
    />
    <div class="absolute left-1/2 h-full w-48 -translate-x-24 bg-primary"></div>
  </div>
  <div class="py-12 px-10 lg:mt-20 lg:w-full lg:px-36">
    <SectionHeading text="Membership" id="membership" />
    <RichText html={content} />
  </div>
</section>
