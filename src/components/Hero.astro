---
import Stars from "../icons/Stars.astro";
import Cta from "./Cta.astro";
---

<div
  class="hero flex items-center flex-col py-36 lg:py-64"
>
  <div class="overlay opacity-40 inset-0 bg-gray-600"></div>
  <div class="flex items-center">
    <Stars class="lg:w-20 lg:h-20"/>
    <h1 class="break-words text-center text-4xl lg:text-6xl font-bold text-white">
      Duhallow <br />Gymnastics
    </h1>
    <Stars class="lg:w-20 lg:h-20"/>
  </div>
  <Cta href="#membership">Sign Up</Cta>
</div>

<style>
  .hero {
    background: linear-gradient(rgba(51, 65, 85, 0.4), rgb(51, 65, 85, 0.4)), url("/assets/gymnastics.webp");  /* Chrome 10-25, Safari 5.1-6 */
    background-size: cover;
    background-position: center;
  }
  
</style>
